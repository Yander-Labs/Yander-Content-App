# Anthropic API Key (Required)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Notion API Configuration (Required for task 4 & 5)
# Get from: https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here

# YouTube API Configuration (Required for task 6)
# Get from: https://console.cloud.google.com/apis/credentials
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token

# Twitter/X API Configuration (Required for task 6)
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# LinkedIn API Configuration (Required for task 6)
# Get from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Instagram API Configuration (Required for task 6)
# Get from: https://developers.facebook.com/apps
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password
# Or use Instagram Graph API
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id

# Optional: Video Editor Configuration
VIDEO_EDITOR_NOTION_USER_ID=your_video_editor_notion_user_id
VIDEO_EDITOR_EMAIL=your_video_editor_email

# Optional: Custom settings
CONTENT_TONE=professional  # Options: professional, casual, educational
TARGET_AUDIENCE=marketing_agency_owners
DEFAULT_VIDEO_LENGTH=15  # minutes
DEFAULT_POST_LENGTH=200  # words
